{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "types": [ // Workaround for https://github.com/TypeStrong/ts-node/issues/216
      "chai",
      "core-js",
      "cuid",
      "mocha",
      "shallowequal"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
